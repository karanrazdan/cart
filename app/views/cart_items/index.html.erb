<p id="notice"><%= notice %></p>

<h1>Listing Cart Items</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Description</th>
      <th>Imdb</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.title %></td>
        <td><%= cart_item.price %></td>
        <td><%= cart_item.description %></td>
        <td><%= cart_item.imdb_id %></td>
        <td><%= link_to 'Show', cart_item %></td>
    <% end %>
  </tbody>
</table>

<br>